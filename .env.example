# Environment
NODE_ENV=development

# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# Admin Configuration (comma-separated Telegram IDs)
ADMIN_TELEGRAM_IDS=123456789,987654321

# Database Configuration
MONGODB_URI=mongodb://username:password@host1:port,host2:port/database?replicaSet=replica-name

# Payment Configuration
TELEBIRR_RECEIVER_PHONE=09XXXXXXXX
CBE_RECEIVER_ACCOUNT=1000XXXXXXXX
PAYMENT_RECIPIENT_NAME=eFayda ID Service
SERVICE_PRICE=50

# Payment Verification API (get key from https://verify.leul.et)
VERIFIER_API_KEY=your_verifier_api_key_here

# Agent/Referral
AGENT_COMMISSION_PERCENT=40

# File Storage
TEMP_DIR=temp

# Logging
LOG_LEVEL=info

# Security
AUDIT_ENCRYPTION_KEY=your-secure-encryption-key-here

# Support
SUPPORT_CONTACT=@efayda_support

# OCR Configuration (Optional - for faster processing)
# Google Vision API (Premium - ~1-2s processing, requires API key)
# Get credentials from: https://console.cloud.google.com/apis/credentials
GOOGLE_VISION_ENABLED=false
GOOGLE_VISION_KEY_PATH=./google-vision-credentials.json

# OCR.space API (FREE - 25,000 requests/month, no credit card needed)
# Get FREE API key from: https://ocr.space/ocrapi
# Leave empty to use free tier (limited to 500 requests/day per IP)
OCR_SPACE_API_KEY=

# Default OCR: OCR.space (FREE - ~2-3s processing, 25,000/month)
# Fallback: Tesseract (FREE - ~5-8s processing, unlimited)
